
@{
    ViewData["Title"] = "User List";
}

@section Head {
    <title>Spreadsheet - User List</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <!--===============================================================================================-->
}

<h2>Index</h2>
<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">

                <div class="col-lg-10">
                    <h1 class='page-title'>Users</h1>
                    <table id="user-table" class="display" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Users</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Item in Model)
                            {
                                <tr>
                                    <td>@Item.Username</td>
                                    <td>
                                        <button class="btn btn-danger deleteButton"><i class="glyphicon glyphicon-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div style="clear:both"></div>
                <hr />
                <div class="form-group">
                    <div style="display: inline-block">
                        <form>
                            <a class="btn btn-primary" href="@Url.Content("~/UserList/CreateUser")"><i class="glyphicon glyphicon-plus"></i> Add New User</a>
                            <a class="btn btn-primary" href="@Url.Content("~/Home/SpreadsheetList")"><i class="glyphicon glyphicon-plus"></i> Redirect to Spreadsheet List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


