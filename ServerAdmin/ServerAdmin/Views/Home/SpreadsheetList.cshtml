@section Scripts {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $("#spreadsheet-table").DataTable({
                responsive: true
            });
        });
    </script>
    <!--===============================================================================================-->
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
}

<body>
    <div class="limiter">
        <div class="container-login100" style="background-image: url('@Url.Content("~/images/bg-01.jpg")');">
            <div class="wrap-table">
                <div class="col-lg-10">
                    <h1 class='page-title'>Spreadsheets</h1>
                    <table id="spreadsheet-table" class="display" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Spreadsheet Name</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Items in Model.spreadsheets)
                            {
                                <tr>
                                    <td>@Items</td>
                                    <td>
                                        <button class="btn btn-danger deleteButton"><i class="glyphicon glyphicon-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div style="clear:both"></div>
                <hr />
                <div class="form-group">
                    <div style="display: inline-block">
                        <form>
                            <a class="btn btn-primary" href="@Url.Content("~/Home/CreateSpread")"><i class="glyphicon glyphicon-plus"></i> Add New Spreadsheet</a>
                            <a class="btn btn-primary" href="@Url.Content("~/UserList")"><i class="glyphicon glyphicon-plus"></i> Redirect to User List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>