
#ifndef CONNECTIONLISTENER_H
#define CONNECTIONLISTENER_H

#include <vector>

class ConnectionListener
{
 public:
  ConnectionListener(int port, void (*newClientConnectedCallback)(int));// the second argument is a function pointer to MasterController's newClientConnected method.
  //It is a callback for ConnectionListener to call whenever a new client connects

  
  ~ConnectionListener();
  void beginListeningForClients();
 private:
  void (*newClientConnectedCallback)(int);
  void shutdown();
  int port;
};


#endif
